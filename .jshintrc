{
  "node": true,
  "browser": true,
  "esnext": true,
  "bitwise": true,
  "camelcase": true,
  "curly": true,
  "eqeqeq": true,
  "immed": true,
  "indent": 4,
  "latedef": true,
  "newcap": true,
  "noarg": true,
  "quotmark": false,
  "regexp": true,
  "undef": true,
  "unused": "vars",
  "strict": false,
  "trailing": true,
  "smarttabs": true,
  "globals": {
    "angular": false,
    "ozpIwc": true,
    "File" : false,
    "vis": false,

    // jasmine globals
    "describe": false,
    "xdescribe": false,
    "beforeEach": false,
    "afterEach": false,
    "inject": false,
    "it": false,
    "xit": false,
    "expect": false,
    "jasmine": false,
    "done": false,
    "alert": false,
    "spyOn": false,

    //Jasmine Promises
    "pit": true,
    "pBeforeEach": true,
    "pAfterEach": true,
    "pauseForPromiseResolution": true,

    //Test globals
    // TODO: refactor these into the ozpIwc namespace or use jshint globals in the right places
    "TestParticipant": true,
    "TestClientParticipant" : true,
    "TestPacketContext": true,
    "FakeRouter": true,
    "commonApiValueContractTests": true
  }
}
